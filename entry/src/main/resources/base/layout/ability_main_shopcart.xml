<?xml version="1.0" encoding="utf-8"?>
<DependentLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:background_element="$graphic:background_common"
    ohos:orientation="vertical">

        <Text
            ohos:id="$+id:shopcart_title_text"
            ohos:align_parent_top="true"
            ohos:height="match_content"
            ohos:width="match_content"
            ohos:text="我的购物车"
            ohos:text_size="15fp"
            ohos:text_color="#bbbbbb"></Text>



    <ScrollView
        ohos:id="$+id:shocpcart_list_scrollview"
        ohos:below="$id:shopcart_title_text"
        ohos:above="$id:shopcart_add_button"
        ohos:height="match_parent"
        ohos:width="match_parent">
        <TableLayout
            ohos:height="match_content"
            ohos:width="match_parent">


            <DirectionalLayout
                xmlns:ohos="http://schemas.huawei.com/res/ohos"
                ohos:height="80vp"
                ohos:top_margin="5vp"
                ohos:alignment="vertical_center"
                ohos:background_element="#ffffff"
                ohos:width="match_parent"
                ohos:orientation="horizontal">


                <Checkbox
                    ohos:text_size="20fp"
                    ohos:height="25vp"
                    ohos:check_element="$graphic:checkbox_check_element"
                    ohos:width="25vp">
                </Checkbox>

                <Image

                    ohos:height="74vp"
                    ohos:margin="3vp"
                    ohos:width="74vp"
                    ohos:image_src="$media:index_icon1">
                </Image>

                <Text

                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:padding="2vp"
                    ohos:text_size="20fp"
                    ohos:text="商品名称"></Text>

                <Text

                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:padding="2vp"
                    ohos:text_size="20fp"
                    ohos:text="￥120"></Text>

                <Text

                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:padding="2vp"
                    ohos:text_size="20fp"
                    ohos:text="2"></Text>
                <Text
                    ohos:height="match_content"
                    ohos:width="match_content"
                    ohos:padding="2vp"
                    ohos:text_size="20fp"
                    ohos:text="1000"></Text>


            </DirectionalLayout>


        </TableLayout>


    </ScrollView>


    <Button
        ohos:id="$+id:shopcart_add_button"
        ohos:height="match_content"
        ohos:align_parent_bottom="true"
        ohos:width="match_parent"
        ohos:text_color="#ffffff"
        ohos:text="添加购物车"
        ohos:text_size="13fp"
        ohos:padding="10vp"
        ohos:bottom_margin="45vp"
        ohos:background_element="#ff383b"></Button>


</DependentLayout>