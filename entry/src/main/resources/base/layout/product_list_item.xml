<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="220vp"
    ohos:width="170vp"
    ohos:margin="3vp"
    ohos:background_element="$graphic:background_index_image"
    ohos:orientation="vertical">
    
    <Image
        ohos:id="$+id:product_image"
        ohos:height="150vp"
        ohos:width="match_parent"
        ohos:image_src="$media:index_icon1"
        ohos:clip_alignment="center"
        ohos:scale_mode="center"
        ></Image>
    
    <Text
        ohos:id="$+id:product_name_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="2vp"
        ohos:text_size="10fp"
        ohos:text="商品名称"></Text>
    
    <Text
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:padding="2vp"
        ohos:text_size="13fp"
        ohos:text="￥13"
        ohos:text_color="#FFE32121"
        ></Text>

</DirectionalLayout>