<?xml version="1.0" encoding="utf-8"?>
<DirectionalLayout
    xmlns:ohos="http://schemas.huawei.com/res/ohos"
    ohos:height="match_parent"
    ohos:width="match_parent"
    ohos:orientation="vertical">



    <PageSlider
        ohos:id="$+id:product_datail_pageSlider"
        ohos:height="300vp"
        ohos:width="match_parent"
        ohos:background_element="#cccccc">

    </PageSlider>

    <Text
        ohos:id="$+id:product_detail_price_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:text_color="#ff0000"
        ohos:text_size="30fp"
        ohos:text="￥138"
        ohos:top_margin="10vp"
        ohos:text_alignment="left"></Text>

    <Text
        ohos:id="$+id:product_detail_sku_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="10vp"
        ohos:text_size="15fp"
        ohos:text="华为P50 12+512G"
        ohos:text_alignment="left"></Text>

    <Text
        ohos:id="$+id:product_detail_desc_text"
        ohos:height="match_content"
        ohos:width="match_parent"
        ohos:top_margin="10vp"
        ohos:text_size="15fp"
        ohos:multiple_lines="true"
        ohos:text="商品详情商品详情商品详情商品详情商品详情商品详情商品详情商品详情商品详情商品详情商品详情商品详情商品详情商品详情商品详情商品详情商品详情"
        ohos:text_alignment="left"></Text>


    <ListContainer
        ohos:id="$+id:product_skus_listcontainer"
        ohos:height="match_content"
        ohos:width="match_parent"></ListContainer>

</DirectionalLayout>